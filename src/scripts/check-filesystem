#!/usr/bin/env bash
while [[ ! -b /dev/$disk ]] ; do
    echo $(ls /sys/block/* | grep "[0-9]$")
    echo -n "partition >>> "
    read disk
done
fs="$(lsblk -rno FSTYPE /dev/$disk | head -n 1)"

source /usr/bin/pardus-open-luks-lvm

if [[ "$fs" == "ext4" ]] ; then
    yes "" | fsck.ext4 -f -y /dev/$disk

elif [[ "$fs" == "btrfs" ]] ; then
    yes "" | btrfs check --force --repair /dev/$disk
else
    fsck.$fs /dev/$disk
fi
